//- Custom Configuration
block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'

doctype html
<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  title drabina
  meta(name='description', content='Pracownia Rozwoju i Terapii')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  block stylesheets
    link(rel='stylesheet', href= baseUrl + 'styles/main.css')
    link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css")

body
  <!--[if lt IE 11]>
  <p class='browsehappy'>You are using an <strong>outdated</strong> browser. Please <a href='http://browsehappy.com/'>upgrade your browser</a> to improve your experience.</p>
  <![endif]-->
  header.header
    .base-width
      a.logo(href='/')
        img.logo-image(src="/images/logo.png", alt="Logo Drabina")
        span.logo-name Drabina
        span.logo-slogan Pracownia Rozwoju i Terapii
      input#menu-btn.menu-btn(type='checkbox')
      label.menu-icon(for='menu-btn')
        span.navicon
      ul.menu
        li
          a(href='#o-mnie') O mnie
        li
          a(href='#terapia') Terapia
        li
          a(href='#oferta') Oferta
        li
          a(href='#cennik') Cennik
        li
          a(href='#kontakt') Kontakt
  
  block content
  
  block scripts
    script(src= baseUrl + 'scripts/main.js')

</html>
